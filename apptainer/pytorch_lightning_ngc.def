Bootstrap: docker
From: nvcr.io/nvidia/pytorch:latest  # NVIDIA PyTorch NGC container

%post
    # Install required packages
    apt-get update && apt-get install -y \
        python3-pip \
        git \
        && rm -rf /var/lib/apt/lists/*

    # Install Python dependencies
    pip install --no-cache-dir \
        pytorch-lightning \
        jupyterlab

%environment
    # Set environment variables
    export PATH="/opt/venv/bin:$PATH"
    export JUPYTER_CONFIG_DIR="/opt/jupyter"
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%runscript
    # Auto-bind $PWD if it is outside $HOME
    if [[ "$PWD" != "$HOME"* ]]; then
        echo "Binding current directory: $PWD"
        exec apptainer exec --nv --bind "$PWD:$PWD" "$SINGULARITY_CONTAINER" jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root --notebook-dir="$PWD"
    else
        echo "Running Jupyter in $HOME"
        exec jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root --notebook-dir="$HOME"
    fi

%labels
    Maintainer YourName
    Description "Apptainer container with NVIDIA PyTorch NGC, PyTorch Lightning, and Jupyter Lab"

%test
    # Check installed packages and GPU access
    python3 -c "import torch, pytorch_lightning; print('PyTorch:', torch.__version__, 'CUDA:', torch.cuda.is_available(), 'PyTorch Lightning:', pytorch_lightning.__version__)"

